<h1>Discover Movies</h1>

<%= button_to "Top Rated Movies", "/movies", method: :get, params: {:q => "top%40rated"} %>

<div id="search">
<%= form_with url: "/movies", method: :get, local: true do |form| %>
  <p><%= form.label :q, "Search by Keyword" %>
  <%= form.text_field :q %></p>
  <p><%= form.submit "Search" %></p>
<% end %>
</div>
